---
const { article } = Astro.props;
---

<div class="flex">
  <div>
    <div
      class="cardimg !bg-no-repeat !bg-cover w-[13rem] h-[7rem]"
      style={{ background: `url(${article.img})` }}
    >
    </div>
  </div>
  <div class="cardbody px-2 pt-1 w-[15rem]">
    <h4 class="cardtitle text-sm font-medium">{article.title}</h4>
    <p class="cardbody text-xs mt-2">
      {article.summary.substring(0, 150)}
      <span class="cardexpand text-mainColor">...see more</span>
    </p>
    <button class="rounded-full w-[60%] hidden h-[2.3rem] bg-mainColor mt-4"
      >Read Now</button
    >
  </div>
</div>
